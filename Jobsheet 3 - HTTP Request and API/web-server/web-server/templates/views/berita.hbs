<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{judul}}</title>
    <style>
      :root { --primary-blue: #1e88e5; --primary-dark: #1565c0; --primary-light: #64b5f6; --secondary-blue: #e3f2fd; --accent-blue: #42a5f5; --text-dark: #212121; --text-light: #757575; --white: #ffffff; --shadow: 0 4px 6px rgba(0, 0, 0,
      0.1); --border-radius: 8px; --transition: all 0.3s ease; } * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; } body { background: linear-gradient(135deg, #e3f2fd 0%,
      #bbdefb 100%); color: var(--text-dark); line-height: 1.6; min-height: 100vh; display: flex; flex-direction: column; } .container { width: 90%; max-width: 1200px; margin: 0 auto; } header { background: linear-gradient(135deg,
      var(--primary-blue), var(--primary-dark)); color: var(--white); padding: 1.5rem 0; box-shadow: var(--shadow); } header .container { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; } header h1 {
      font-size: 1.8rem; font-weight: 600; } nav a { color: var(--white); text-decoration: none; margin: 0 0.5rem; transition: var(--transition); padding: 0.5rem 0.8rem; border-radius: var(--border-radius); } nav a:hover { background-color:
      rgba(255, 255, 255, 0.2); } main { padding: 2rem 0; flex: 1; } main h2 { text-align: center; margin-bottom: 2rem; color: var(--primary-dark); font-size: 1.8rem; } .berita-list { display: grid; grid-template-columns: repeat(auto-fill,
      minmax(280px, 1fr)); gap: 1.5rem; } .berita-item { background-color: var(--white); border-radius: var(--border-radius); box-shadow: var(--shadow); padding: 1.5rem; transition: var(--transition); border-top: 4px solid
      var(--primary-blue); position: relative; overflow: hidden; } .berita-item::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: linear-gradient(90deg, var(--primary-blue),
      var(--accent-blue)); } .berita-item:hover { transform: translateY(-5px); box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15); } .berita-item h3 { color: var(--primary-dark); margin-bottom: 1rem; font-size: 1.3rem; border-bottom: 1px solid
      var(--secondary-blue); padding-bottom: 0.5rem; } .berita-item p { margin-bottom: 0.8rem; color: var(--text-light); } .berita-item .cuaca { font-weight: 600; color: var(--primary-blue); } .berita-item .suhu { font-weight: 600; color:
      #e53935; } .berita-item .kelembaban { font-weight: 600; color: #43a047; } .berita-item .angin { font-weight: 600; color: #ff9800; } footer { background-color: var(--primary-dark); color: var(--white); text-align: center; padding:
      1.5rem 0; margin-top: 2rem; } .loading { color: var(--text-light); font-style: italic; } @media (max-width: 768px) { header .container { flex-direction: column; gap: 1rem; } nav a { display: inline-block; margin: 0.2rem; }
      .berita-list { grid-template-columns: 1fr; } }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>{{judul}}</h1>
        <nav>
          <a href="/">Home</a>
          <a href="/tentang">Tentang</a>
          <a href="/bantuan">Bantuan</a>
          <a href="/berita">Berita</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <h2>Berita Cuaca Hari Ini</h2>

      <div class="berita-list">
        <div class="berita-item" id="jakarta">
          <h3>Jakarta</h3>
          <p>Lokasi: Jakarta, Indonesia</p>
          <p>Cuaca: <span class="cuaca loading">Memuat...</span></p>
          <p>Suhu: <span class="suhu loading">Memuat...</span> 째C</p>
          <p>Kelembaban: <span class="kelembaban loading">Memuat...</span>%</p>
          <p>Kecepatan Angin: <span class="angin loading">Memuat...</span> km/h</p>
        </div>

        <div class="berita-item" id="bandung">
          <h3>Bandung</h3>
          <p>Lokasi: Bandung, Indonesia</p>
          <p>Cuaca: <span class="cuaca loading">Memuat...</span></p>
          <p>Suhu: <span class="suhu loading">Memuat...</span> 째C</p>
          <p>Kelembaban: <span class="kelembaban loading">Memuat...</span>%</p>
          <p>Kecepatan Angin: <span class="angin loading">Memuat...</span> km/h</p>
        </div>

        <div class="berita-item" id="surabaya">
          <h3>Surabaya</h3>
          <p>Lokasi: Surabaya, Indonesia</p>
          <p>Cuaca: <span class="cuaca loading">Memuat...</span></p>
          <p>Suhu: <span class="suhu loading">Memuat...</span> 째C</p>
          <p>Kelembaban: <span class="kelembaban loading">Memuat...</span>%</p>
          <p>Kecepatan Angin: <span class="angin loading">Memuat...</span> km/h</p>
        </div>

        <div class="berita-item" id="medan">
          <h3>Medan</h3>
          <p>Lokasi: Medan, Indonesia</p>
          <p>Cuaca: <span class="cuaca loading">Memuat...</span></p>
          <p>Suhu: <span class="suhu loading">Memuat...</span> 째C</p>
          <p>Kelembaban: <span class="kelembaban loading">Memuat...</span>%</p>
          <p>Kecepatan Angin: <span class="angin loading">Memuat...</span> km/h</p>
        </div>
      </div>
    </main>

    <footer>
      <div class="container">
        &copy; 2025
        {{nama}}
        | Aplikasi Cek Cuaca
      </div>
    </footer>

    <script>
      const lokasiList = ["Jakarta", "Bandung", "Surabaya", "Medan"]; const apiKey = "537c7be40b7068d54f1443cf6837cf9b"; lokasiList.forEach(lokasi => {
      fetch(`https://api.openweathermap.org/data/2.5/weather?q=${encodeURIComponent(lokasi)},ID&appid=${apiKey}&units=metric&lang=id`) .then(res => res.json()) .then(data => { if (data.cod === 200) { const container =
      document.getElementById(lokasi.toLowerCase()); container.querySelector(".cuaca").textContent = data.weather[0].description; container.querySelector(".suhu").textContent = Math.round(data.main.temp);
      container.querySelector(".kelembaban").textContent = data.main.humidity; container.querySelector(".angin").textContent = (data.wind.speed * 3.6).toFixed(1); // Convert m/s to km/h } else { console.error(`Error fetching data for
      ${lokasi}:`, data.message); // Tampilkan pesan error di elemen const container = document.getElementById(lokasi.toLowerCase()); container.querySelector(".cuaca").textContent = "Gagal memuat";
      container.querySelector(".suhu").textContent = "Gagal memuat"; container.querySelector(".kelembaban").textContent = "Gagal memuat"; container.querySelector(".angin").textContent = "Gagal memuat"; } }) .catch(err => {
      console.log(`Error fetching data ${lokasi}:`, err); const container = document.getElementById(lokasi.toLowerCase()); container.querySelector(".cuaca").textContent = "Gagal memuat"; container.querySelector(".suhu").textContent = "Gagal
      memuat"; container.querySelector(".kelembaban").textContent = "Gagal memuat"; container.querySelector(".angin").textContent = "Gagal memuat"; }); });
    </script>
  </body>
</html>